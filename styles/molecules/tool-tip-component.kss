/*** ToolTipComponent ***/

.tool-tip-component {
	min-width: 10em;
	min-height: 2em;
	padding: 30px 1em 1em 1em;
	border: solid 1px var(--dark-primary-color);
	background-color: var(--light-primary-color);
}

.tool-tip-component .label-component.close-component {
	position: absolute;
	top: 9px;
	right: 9px;
	margin: 0;
}

