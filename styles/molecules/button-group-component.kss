/*** ButtonGroupComponent ***/

.dom.button-group-component .dom.button {
	outline: 0;
	margin: 0 2px;
}

.dom.button-group-component .dom.button:active {
	outline: 0;
}

.dom.button-group-component .dom.button.selected {
	border-color: var(--secondary-color);
}

.som.button-group-component {
	display: grid;
	grid-template: 20cm / 20cm;
	grid-auto-rows: 20cm;
	gap: 3cm;
}