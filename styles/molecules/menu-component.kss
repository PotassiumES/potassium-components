/* MenuComponent */

.dom.menu-component {
	z-index: 7;
	position: relative;
	vertical-align: top;
	display: inline-block;
}

.dom.menu-component > .menu-items-component {
	display: grid;
	grid-auto-rows: auto;
	grid-template: auto / auto;
	gap: 0;
	position: relative;
}

.dom.menu-component > .toggle-component {
	width: 25px;
	height: 44.1333px;
	cursor: pointer;
	user-select: none;
}

.dom.menu-component > .toggle-component.open {
	transform: rotate(-90deg);
}

.dom.menu-component > .menu-items-component {
	top: 45px;
	right: 13px;
	min-width: 6em;
	text-align: center;
	position: absolute;
	background-color: var(--background-color);
	border-radius: var(--container-border-radius);
	border: solid var(--container-border-width) var(--primary-color);
}

.dom.menu-component > .menu-items-component > .selected {
	color: var(--primary-color);
	z-index: 7;
}

.dom.menu-component > .menu-items-component > .component {
	border-top: solid var(--container-border-width) var(--secondary-color);
	padding: var(--inner-element-padding);
}

.dom.menu-component > .menu-items-component > .component:first-child {
	border-top: none;
}

.dom.menu-component > .menu-items-component > .component:hover {
	color: var(--secondary-color);
}

.dom.menu-component > .menu-items-component > .component:active {
	color: var(--dark-secondary-color);
}

.som.menu-component > .toggle-component {
	scale: 0.1 0.1 0.1;
}