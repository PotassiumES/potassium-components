/* TableComponent */

.dom.table-component > tr {
}

.dom.table-component > tr > th,
.dom.table-component > tr > td {
	padding: 10px 10px;
	border-bottom: solid 1px var(--dom-primary-color);
	border-left: solid 1px var(--dom-primary-color);
}

.dom.table-component > tr > th:first-child,
.dom.table-component > tr > td:first-child {
	border-left: none;
}

.dom.table-component > tr:last-child > th,
.dom.table-component > tr:last-child > td {
	border-bottom: none;
}