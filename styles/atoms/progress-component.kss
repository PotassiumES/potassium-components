/* ProgressComponent */

.som.progress-component > .som.track-component {
	centroid-y: 55cm;
}

.som.progress-component > .som.track-component > mesh {
	material-emissive: var(--secondary-color);
	scale: 1 0.08 0.01;
}

.som.progress-component > .track-component > .fill-component {
	scale: 0.95 0.06 0.01;
	centroid: 2.5cm -46.9cm 3cm;
}

.som.progress-component > .track-component > .fill-component > mesh {
	material-emissive: var(--primary-color);
}

.dom.progress-component {
	display: inline;
} 

.dom.progress-component > .track-component {
	display: block;
	width: 100%;
	height: 1em;
	border: solid var(--container-border-width) var(--secondary-color);
	border-radius: var(--container-border-radius);
}

.dom.progress-component > .track-component > .fill-component {
	display: block;
	height: 1em;
	background-color: var(--primary-color);	
}
