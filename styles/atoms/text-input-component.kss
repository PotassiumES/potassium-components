/* TextInputComponent */

.som.text-input-component > .bracket {
	centroid: 0 -4cm 0;
	margin: 1cm;
	padding: 2cm;
}

.som.text-input-component > .bracket > node > mesh[name=Cube.001_Cube.003] {
	material-color: var(--som-primary-color);
}

.som.text-input-component > text {
	centroid: 3cm 0 0;
	font-color: var(--som-base-color);
}

.som.text-input-component.placeholder > text {
	material-color: var(--som-light-base-color);
}

.dom.text-input-component {
	padding: 4px;
	font-size: 1em;
}
