{
  "name": "potassium-components",
  "version": "0.1.0-alpha1",
  "description": "UI elements for use in PotassiumES",
  "main": "index.js",
  "scripts": {
    "docs": "./node_modules/.bin/esdoc",
    "lint": "eslint src",
    "prettier": "prettier --write src/*.js src/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PotassiumES/potassium-components.git"
  },
  "author": "Trevor F. Smith <trevor@transmutable.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PotassiumES/potassium-components/issues"
  },
  "homepage": "https://github.com/PotassiumES/potassium-components#readme",
  "prettier": {
    "semi": false,
    "useTabs": true,
    "printWidth": 120,
    "singleQuote": true
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "prettier"
    ],
    "rules": {
      "no-var": "warn",
      "no-undef": "off",
      "no-console": "off",
      "prefer-const": "warn",
      "no-unused-vars": "off",
      "prettier/prettier": "warn"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": ["prettier --write", "eslint --fix", "git add"]
    },
    "relative": true
  },
  "devDependencies": {
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.13.7"
  }
}
